{
    "name": "contentify/contentify",
    "description": "Contentify is an esports CMS based on the Laravel 5 framework.",
    "keywords": ["cms", "contentify", "gaming", "esports", "website"],
    "homepage": "http://www.contentify.org",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "laravel/framework": "5.7.*",
        "laravel/tinker": "^1.0",
        "laravelcollective/html": "5.5.*",
        "cartalyst/sentinel": "2.*",
        "thujohn/rss": "1.*",
        "intervention/image": "2.*",
        "chriskonnertz/open-graph": "1.*",
        "chriskonnertz/bbcode": "1.*",
        "chriskonnertz/jobs": "3.*",
        "watson/validating": "3.*",
        "caffeinated/modules": "4.*",
        "invisnik/laravel-steam-auth": "3.*",
        "oyejorge/less.php": "1.*",
        "fideloper/proxy": "^4.0",
        "ext-json": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-pdo": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.0",
        "filp/whoops": "^2.0",
        "squizlabs/php_codesniffer": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Contentify\\": "contentify"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
